<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  自定义Title  -->
    <declare-styleable name="WeightTitle">
        <!--   标题     -->
        <attr name="weight_title" format="string" />
        <!--   标题颜色     -->
        <attr name="weight_color" format="color" />
        <!--   标题大小     -->
        <attr name="weight_size" format="dimension" />
        <!--   返回箭头     -->
        <attr name="weight_arrow" format="reference" />
        <!--   右侧文字 | 图标是否显示       -->
        <attr name="weight_end_hide" format="boolean" />
        <!--   右侧文字      -->
        <attr name="weight_end_text" format="string" />
        <!--   右侧文字大小     -->
        <attr name="weight_end_text_size" format="dimension" />
        <!--   右侧图标   true 隐藏  false  显示   -->
        <attr name="weight_end_icon" format="reference" />
        <!--   右侧文字颜色   -->
        <attr name="weight_end_text_color" format="color" />
    </declare-styleable>

    <!-- 自定义圆环     -->
    <declare-styleable name="SeekLoading">
        <!--  外环颜色  -->
        <attr name="out_color" format="color" />
        <!--  内环颜色       -->
        <attr name="inner_color" format="color" />
        <!--  内环文字大小    -->
        <attr name="seek_size" format="dimension" />
        <!--  文字颜色       -->
        <attr name="loading_text_color" format="color" />
    </declare-styleable>


    <!--   圆角图片 -->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>


    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>

    <!--   自动换行的LinearLayout并且平均分   -->
    <declare-styleable name="AutoLinearLayout">
        <attr name="auto_row" format="integer" />
        <attr name="auto_col" format="integer" />
        <attr name="auto_spec_horizontal" format="dimension" />
        <attr name="auto_spec_vertical" format="dimension" />
    </declare-styleable>

    <!-- AutoText -->
    <declare-styleable name="AutoTextView">
        <!--      文本  -->
        <attr name="auto_text" format="string" />
        <!--       要替换的颜色-->
        <attr name="replace_color" format="color" />
        <!--        要截取的文本开始位置-->
        <attr name="replace_start_index" format="integer" />
    </declare-styleable>
</resources>