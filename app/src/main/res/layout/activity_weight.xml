<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.WeightTitleActivity">

    <com.example.myapplication.weight.WeightTitle
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="10dp"
        app:weight_color="@color/white"
        android:paddingBottom="10dp"
        app:weight_size="@dimen/text_def_size"
        app:weight_title="@string/app_name"
        app:weight_arrow="@drawable/icon_back"/>
</RelativeLayout>