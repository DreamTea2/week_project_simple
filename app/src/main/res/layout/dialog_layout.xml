<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_radius_10">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lt_gift"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:lottie_autoPlay="false"
            app:lottie_fileName="progress.json"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加载中..."
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_text" />
    </LinearLayout>

    <com.example.myapplication.weight.SeekLoading
        android:id="@+id/loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_loading"
        android:background="@drawable/shape_radius_10"
        app:inner_color="@color/white"
        app:out_color="@color/black"
        app:loading_text_color="@color/white"
        app:seek_size="@dimen/text_small_text" />
</RelativeLayout>